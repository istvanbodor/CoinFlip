<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <ImageView
        android:id="@+id/kep"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/heads"


        ></ImageView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/kep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gombok">


        <Button
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Fej"
            android:id="@+id/fejgomb"

            />
        <Button
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Írás"
            android:id="@+id/irasgomb"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gombok"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dobasok"
            android:text="Dobások: 0"
            android:textSize="25sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gyozelem"
            android:text="Győzelem: 0"
            android:textSize="25sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vereseg"
            android:text="Vereség: 0"
            android:textSize="25sp"
            ></TextView>


    </LinearLayout>



</RelativeLayout>